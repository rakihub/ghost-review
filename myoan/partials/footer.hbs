<footer class="footer-section g-grid-template g-child-site">
	<div class="footer-wrap">
		<div class="footer-content">
			<div>
				<div class="footer-logo g-logo is-footer">{{>logo}}</div>
				{{#if @site.description}}
				<p class="footer-description g-font-s">{{@site.description}}</p>
				{{/if}}
			</div>
			<ul class="footer-social">
				{{#if @site.facebook}}
				<li><a href="{{facebook_url}}" target="_blank" rel="noopener" aria-label="link Facebook">{{>icons/social/facebook}}</a></li>
				{{/if}}
				{{#if @site.twitter}}
				<li><a href="{{twitter_url}}" target="_blank" rel="noopener" aria-label="link X">{{>icons/social/x}}</a></li>
				{{/if}}
				{{#if @site.secondary_navigation}}
				{{navigation type="secondary" is_social=true is_column=false}}
				{{/if}}
				{{>footer_icons}}
			</ul>
		</div>
		<ul class="footer-columns">
			{{#if @site.secondary_navigation}}
			{{navigation type="secondary" is_social=false is_column=true}}
			{{/if}}
		</ul>
	</div>
	<div class="g-font-xxxxs">
		&copy;<a href="{{@site.url}}"> {{@site.title}}</a> {{date format="YYYY"}}. {{#if @custom.footer_copyright}}{{{@custom.footer_copyright}}}{{else}}{{{t "Published with {ghost-link} and {theme-name}." ghost-link="<a href=\"https://ghost.org\" target=\"_blank\" rel=\"noopener noreferrer\">Ghost</a>" theme-name="<a href=\"https://fueko.net\" target=\"_blank\" rel=\"noopener\">Myoan</a>"}}}{{/if}}
	</div>
</footer>
<picture>
	{{#if is_img_xl}}
	<source srcset="{{img_url feature_image size="s" format="webp"}} 300w,
					{{img_url feature_image size="m" format="webp"}} 600w,
					{{img_url feature_image size="l" format="webp"}} 1200w,
					{{img_url feature_image size="xl" format="webp"}} 1600w"
	sizes="(max-width:480px) 300px, (max-width:768px) 600px, (max-width:1480px) 1200px, 1600px"
	type="image/webp">
	<img srcset="{{img_url feature_image size="s"}} 300w,
				 {{img_url feature_image size="m"}} 600w,
				 {{img_url feature_image size="l"}} 1200w,
				 {{img_url feature_image size="xl"}} 1600w"
	sizes="(max-width:480px) 300px, (max-width:768px) 600px, (max-width:1480px) 1200px, 1600px"
	src="{{img_url feature_image size="xl"}}"
	loading="lazy"
	alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
	{{else if is_img_l}}
	<source srcset="{{img_url feature_image size="s" format="webp"}} 300w,
					{{img_url feature_image size="m" format="webp"}} 600w,
					{{img_url feature_image size="l" format="webp"}} 1200w"
	sizes="(max-width:480px) 300px, (max-width:768px) 600px, 1200px"
	type="image/webp">
	<img srcset="{{img_url feature_image size="s"}} 300w,
				 {{img_url feature_image size="m"}} 600w,
				 {{img_url feature_image size="l"}} 1200w"
	sizes="(max-width:480px) 300px, (max-width:768px) 600px, 1200px"
	src="{{img_url feature_image size="l"}}"
	loading="lazy"
	alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
	{{else}}
	<source srcset="{{img_url feature_image size="s" format="webp"}} 300w,
					{{img_url feature_image size="m" format="webp"}} 600w"
	sizes="(max-width:480px) 300px, 600px"
	type="image/webp">
	<img srcset="{{img_url feature_image size="s"}} 300w,
				 {{img_url feature_image size="m"}} 600w"
	sizes="(max-width:480px) 300px, 600px"
	src="{{img_url feature_image size="m"}}"
	loading="lazy"
	alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
	{{/if}}
</picture>
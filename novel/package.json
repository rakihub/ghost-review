{
  "name": "link-weave",
  "description": "A Ghost theme designed to seamlessly weave together your posts, creating a fluid and cohesive storytelling experience.",
  "version": "1.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "assets/screenshot_desktop.webp",
    "mobile": "assets/screenshot_mobile.webp"
  },
  "scripts": {
    "dev": "rollup -c --environment BUILD:development -w",
    "test": "gscan .",
    "test:ci": "gscan --fatal --verbose .",
    "build": "rollup -c --environment BUILD:production",
    "zip": "npm run build && bestzip $npm_package_name.zip assets/* locales/* partials/* members/* *.hbs package.json rollup.config.js README.md",
    "pretest": "npm run build"
  },
  "author": {
    "name": "Rakihub",
    "email": "theme@rakihub.com",
    "url": "https://rakihub.com"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Beautiful",
      "Clean",
      "Minimal",
      "Blog"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "bestzip": "^2.2.1",
    "gscan": "4.43.1",
    "postcss": "^8.4.38",
    "postcss-preset-env": "^8.0.1",
    "rollup": "^3.29.4",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2"
  },
  "browserslist": [
    "defaults"
  ],
  "config": {
    "posts_per_page": 12,
    "image_sizes": {
      "xs": {
        "width": 160
      },
      "s": {
        "width": 320
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1200
      },
      "xxl": {
        "width": 2000
      }
    },
    "card_assets": true,
    "custom": {
      "navigation_layout": {
        "type": "select",
        "options": [
          "Logo in the middle",
          "Logo on the left",
          "Stacked"
        ],
        "default": "Logo in the middle"
      },
      "site_background_color": {
        "type": "color",
        "default": "#ffffff"
      },
      "header_and_footer_color": {
        "type": "select",
        "options": [
          "Background color",
          "Accent color"
        ],
        "default": "Background color"
      },
      "title_font": {
        "type": "select",
        "options": [
          "Modern sans-serif",
          "Elegant serif",
          "Consistent mono"
        ],
        "default": "Modern sans-serif"
      },
      "body_font": {
        "type": "select",
        "options": [
          "Modern sans-serif",
          "Elegant serif"
        ],
        "default": "Modern sans-serif"
      },
      "signup_heading": {
        "type": "text",
        "description": "Used in your subscribe section across your theme, defaults to site title when empty"
      },
      "signup_subheading": {
        "type": "text",
        "description": "Defaults to site description when empty"
      },
      "reserved_tags": {
        "type": "text",
        "description": "Reserved tags will be excluded from book titles or categories. Use the tag slugs separated by commas without spaces, e.g, 'news,updates'"
      },
      "header_style": {
        "type": "select",
        "options": [
          "Featured slider",
          "Landing",
          "Search",
          "Off"
        ],
        "default": "Featured slider",
        "group": "homepage"
      },
      "header_text": {
        "type": "text",
        "group": "homepage",
        "description": "Defaults to site description when empty",
        "visibility": "header_style:[Landing, Search]"
      },
      "background_image": {
        "type": "boolean",
        "default": true,
        "description": "Use the publication cover set on the Brand tab as your background",
        "group": "homepage",
        "visibility": "header_style:[Landing, Search]"
      },
      "category_section_layout": {
        "type": "select",
        "options": [
          "3-column grid",
          "4-column grid",
          "List"
        ],
        "default": "3-column grid",
        "group": "homepage"
      },
      "featured_category_tags": {
        "type": "text",
        "description": "Defaults to the category tags with the most books. Use the tag slugs separated by commas without spaces, e.g, 'hash-novel,hash-tech'",
        "group": "homepage"
      },
      "featured_category_tags_limit": {
        "type": "text",
        "default": 4,
        "description": "Limit the feature category tags number. Accept number or text 'all'.",
        "group": "homepage"
      },
      "category_book_count": {
        "type": "text",
        "default": 4,
        "description": "The maximum number of books displayed in each category. Accept number or text 'all'.",
        "group": "homepage"
      },
      "tag_cloud": {
        "type": "text",
        "description": "Defaults to the category tags with the most books will be rendered in this section. Use the tag slugs separated by commas without spaces, e.g, 'hash-novel,hash-tech'",
        "group": "homepage"
      },
      "tag_cloud_count": {
        "type": "text",
        "default": 10,
        "description": "Limit the tag number on tag cloud. Accept number or text 'all'.",
        "group": "homepage"
      },
      "post_feed_style": {
        "type": "select",
        "options": [
          "Grid",
          "List"
        ],
        "default": "Grid",
        "group": "homepage"
      },
      "show_images_in_feed": {
        "type": "boolean",
        "default": true,
        "group": "homepage",
        "visibility": "post_feed_style:List"
      },
      "show_author": {
        "type": "boolean",
        "default": true,
        "group": "homepage"
      }
    }
  },
  "type": "module",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "fast-glob": "^3.3.2",
    "imagesloaded": "^5.0.0",
    "photoswipe": "4.1.3",
    "reframe.js": "^4.0.2"
  }
}

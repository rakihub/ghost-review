<section class="gh-header is-{{#match headerStyle "Featured slider"}}slider{{else}}classic{{/match}}{{#if @custom.background_image}}{{#if @site.cover_image}} has-image{{/if}}{{/if}} gh-outer">

    {{!-- Background image --}}
    {{#if @custom.background_image}}
        {{#match headerStyle "!=" "Featured slider"}}
            {{#if @site.cover_image}}
                <img class="gh-header-image" src="{{@site.cover_image}}" alt="{{@site.title}}">
            {{/if}}
        {{/match}}
    {{/if}}

    <div class="gh-header-inner gh-inner">

        {{!-- Featured slider layout --}}
        {{#match headerStyle "Featured slider"}}
            <div class="slider-container">
                <div class="slider img-slider swiper" x-data x-init="initImgSlider()">
                    <div class="slider-inner swiper-wrapper">
                        {{#get "posts" filter="featured:true+tag:hash-book" include="tags,authors"}}
                            {{#foreach posts}}
                                {{> "slider-card-img" lazyLoad=true}}
                            {{/foreach}}
                        {{/get}}
                    </div>
                </div>
                <div class="slider content-slider swiper" x-data x-init="initContentSlider()">
                    <div class="slider-inner swiper-wrapper">
                        {{#get "posts" filter="featured:true+tag:hash-book" include="tags,authors"}}
                            {{#foreach posts}}
                                {{> "slider-card-content"}}
                            {{/foreach}}
                        {{/get}}
                    </div>
                    <div class="slider-controls">
                        <div class="slider-pagination"></div>
                        <button class="slider-button-prev" aria-label="Previous slide">
                            {{> 'icons/arrow-left'}}
                        </button>
                        <button class="slider-button-next" aria-label="Next slide">
                            {{> 'icons/arrow-right'}}
                        </button>
                    </div>
                </div>
            </div>

        {{/match}}

        {{!-- Landing layout --}}
        {{#match headerStyle "Landing"}}
            <h1 class="gh-header-title is-title">{{#if @custom.header_text}}{{@custom.header_text}}{{else}}{{@site.description}}{{/if}}</h1>
            {{> "email-subscription" email_field_id="header-email"}}
        {{/match}}

        {{!-- Search layout --}}
        {{#match headerStyle "Search"}}
            <h1 class="gh-header-title is-title">{{#if @custom.header_text}}{{@custom.header_text}}{{else}}{{@site.description}}{{/if}}</h1>
            <form class="gh-form">
                {{> "icons/search"}}
                <button class="gh-form-input" data-ghost-search>Search posts, tags and authors</button>
            </form>
        {{/match}}

    </div>

</section>

<section class="gh-container tag-cloud-container no-image gh-outer">
    <div class="gh-container-inner gh-inner">
        <h2 class="gh-container-title">Tag Cloud</h2>
        <div class="gh-main">
            {{#match @custom.tag_cloud "=" "all"}}
                {{#get "tags" filter="name:~^'_'" order="count.posts desc"}}
                    {{#foreach tags}}
                        <a class="gh-card" href="{{url}}" x-data="{tagName: '{{name}}'}"
                           x-init="tagName = tagName[0] === '_'  ? tagName.slice(1) : tagName" x-text="tagName">
                        </a>
                    {{/foreach}}
                {{/get}}
            {{else}}
                {{#get "tags" filter="name:[{{@custom.tag_cloud}}]" order="count.posts desc"}}
                    {{#foreach tags}}
                        <a href="{{url}}" x-data="{tagName: '{{name}}'}"
                           x-init="tagName = tagName[0] === '_'  ? tagName.slice(1) : tagName" x-text="tagName">
                        </a>
                    {{/foreach}}
                {{/get}}
            {{/match}}
        </div>
    </div>
</section>

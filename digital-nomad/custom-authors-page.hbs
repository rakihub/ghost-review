{{!< default}}

<main class="main archive-page authors-page">
    {{#page}}
    {{#match @page.show_title_and_feature_image}}
    <div class="archive-page-head{{#if feature_image}} with-feature-image{{/if}}">
        {{#if feature_image}}
        <picture>
            <source srcset="{{img_url feature_image size="3600" format="webp" }} 3600w, {{img_url feature_image size="2800"
                format="webp" }} 2800w, {{img_url feature_image size="2400" format="webp" }} 2400w, {{img_url feature_image
                size="2000" format="webp" }} 2000w, {{img_url feature_image size="1600" format="webp" }} 1600w, {{img_url
                feature_image size="1200" format="webp" }} 1200w, {{img_url feature_image size="960" format="webp" }} 960w,
                {{img_url feature_image size="720" format="webp" }} 720w,{{img_url feature_image size="400" format="webp" }}
                400w" sizes="100vw" type="image/webp">
            <img class="archive-page-head__bg-image" srcset="{{img_url feature_image size="3600" }} 3600w, {{img_url
                feature_image size="2800" }} 2800w, {{img_url feature_image size="2400" }} 2400w, {{img_url feature_image
                size="2000" }} 2000w, {{img_url feature_image size="1600" }} 1600w, {{img_url feature_image size="1200" }}
                1200w, {{img_url feature_image size="960" }} 960w, {{img_url feature_image size="720" }} 720w,{{img_url
                feature_image size="400" }} 400w" sizes="100vw" src="{{img_url feature_image size="3600"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}} {{t "feature image"}}{{/if}}" /> />
        </picture>
        {{/if}}
        <div class="archive-page-head__content wrapper">
            <h1 class="archive-page-head__title">{{title}}</h1>
            {{#if custom_excerpt}}
            <p class="archive-page-head__excerpt">{{custom_excerpt}}</p>
            {{/if}}
        </div>
    </div>
    {{/match}}
    {{/page}}
    <div class="wrapper">
        <div class="authors-container">
        {{#get "authors" include="count.posts" limit="all"}}
        {{#if authors}}
        {{#foreach authors}}
        <div class="author-card" style="--i: {{#match @index "<=" 11}}{{@index}}{{else}}0{{/match}}">
            {{#if profile_image}}
                <a href="{{url}}" class="author-card__link" aria-label="{{name}} {{t "Link"}}">
                    <picture>
                        <source srcset="{{img_url profile_image size="960" format="webp" }} 960w, {{img_url profile_image size="720"
                            format="webp" }} 720w, {{img_url profile_image size="400" format="webp" }} 400w, {{img_url profile_image
                            size="300" format="webp" }} 300w"
                            sizes="(max-width: 550px) 93vw, (max-width: 750px) 45vw, (max-width: 1100px) 29vw, (max-width: 1479px) 22vw, (min-width: 1480px) 332px"
                            type="image/webp">
                        <img class="author-card__image" srcset="{{img_url profile_image size="960" }} 960w, {{img_url profile_image
                            size="720" }} 720w, {{img_url profile_image size="400" }} 400w, {{img_url profile_image size="300" }} 300w"
                            sizes="(max-width: 550px) 93vw, (max-width: 750px) 45vw, (max-width: 1100px) 29vw, (max-width: 1479px) 22vw, (min-width: 1480px) 332px"
                            src="{{img_url profile_image size="960"}}" alt="{{name}} {{t "profile image"}}" {{#match @index ">" 3}}
                            loading="lazy" {{/match}} />
                    </picture>
                    <h2 class="author-card__name">{{name}}</h2>
                </a>
            {{else}}
                <a href="{{url}}" class="author-card__link author-card__link--without-img" aria-label="{{name}} {{t "Link"}}">
                    <h2 class="author-card__name">{{name}}</h2>
                </a>
            {{/if}}
        </div>
        {{/foreach}}
        {{/if}}
        {{/get}}
        </div>
    </div>
</main>

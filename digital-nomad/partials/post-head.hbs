<section class="post-head{{#if featured}} featured{{/if}}">
{{#if featured}}

    {{!-- ---------- FEATURED POST HEAD ---------- --}}

    <div class="post-head-container featured{{#if feature_image}} featured-with-image{{/if}}">
        {{#if feature_image}}
        <picture>
            <source srcset="{{img_url feature_image size="3600" format="webp" }} 3600w, {{img_url feature_image size="2800"
                format="webp" }} 2800w, {{img_url feature_image size="2400" format="webp" }} 2400w, {{img_url feature_image
                size="2000" format="webp" }} 2000w, {{img_url feature_image size="1600" format="webp" }} 1600w, {{img_url
                feature_image size="1200" format="webp" }} 1200w, {{img_url feature_image size="960" format="webp" }} 960w,
                {{img_url feature_image size="720" format="webp" }} 720w, {{img_url feature_image size="400" format="webp" }}
                400w" sizes="100vw" type="image/webp">
            <img srcset="{{img_url feature_image size="3600"}} 3600w, {{img_url feature_image size="2800" }} 2800w, {{img_url
                feature_image size="2400" }} 2400w, {{img_url feature_image size="2000" }} 2000w, {{img_url feature_image
                size="1600" }} 1600w, {{img_url feature_image size="1200" }} 1200w, {{img_url feature_image size="960" }} 960w,
                {{img_url feature_image size="720" }} 720w, {{img_url feature_image size="400" }} 400w" sizes="100vw"
                src="{{img_url feature_image size="3600"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}} {{t "feature image"}}{{/if}}"
                class="post-head-bg-image" loading="lazy">
        </picture>
        {{/if}}
        <div class="post-head-wrapper wrapper">
            <div class="post-head-meta">
                {{#if tags}}
                    {{>post-tags}}
                {{else if featured}}
                    {{>post-tags}}
                {{else}}
                    {{^match visibility "=" 'public'}}
                    {{>post-tags}}
                    {{/match}}
                {{/if}}
                <div class="post-head-date-author">
                    <span class="post-head-date">
                        <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="MMM D, YYYY"}}</time>
                    </span>
                    <div class="post-head-authors">
                        <span class="post-head-authors__by">{{t "by"}}</span>
                        <div class="post-head-authors-container">
                            {{#foreach authors}}
                            <a class="post-head-author" href="{{url}}" aria-label="{{name}}">{{name}}</a>
                            {{/foreach}}
                        </div>
                    </div>
                </div>
            </div>
            <h1 class="post-head-title">
                {{title}}
            </h1>
            {{#if custom_excerpt}}
            <p class="post-head-excerpt">
                {{custom_excerpt}}
            </p>
            {{/if}}
        </div>
    </div>

    {{else}}

    {{!-- ---------- NOT FEATURED POST HEAD ---------- --}}

    <div class="post-head-container{{#if feature_image}} normal-with-image{{/if}}">
        <div class="post-head-wrapper wrapper">
            <div class="post-head-meta">
                {{#if tags}}
                    {{>post-tags}}
                {{else if featured}}
                    {{>post-tags}}
                {{else}}
                    {{^match visibility "=" 'public'}}
                    {{>post-tags}}
                    {{/match}}
                {{/if}}
                <div class="post-head-date-author">
                    <span class="post-head-date">
                        <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="MMM D, YYYY"}}</time>
                    </span>
                    <div class="post-head-authors">
                        <span class="post-head-authors__by">{{t "by"}}</span>
                        <div class="post-head-authors-container">
                            {{#foreach authors}}
                            <a class="post-head-author" href="{{url}}" aria-label="{{name}}">{{name}}</a>
                            {{/foreach}}
                        </div>
                    </div>
                </div>
            </div>
            <h1 class="post-head-title">
                {{title}}
            </h1>
            {{#if custom_excerpt}}
            <p class="post-head-excerpt">
                {{custom_excerpt}}
            </p>
            {{/if}}
        </div>
    </div>

    {{/if}}
</section>
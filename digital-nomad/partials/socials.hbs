<div class="socials">
    {{#if @site.facebook}}
        <a class="socials__link" href={{facebook_url}} target="_blank" rel="noopener noreferrer" aria-label="{{@site.title}} {{t "facebook link"}}">{{>icons/facebook-icon}}</a>
    {{/if}}
    {{#if @site.twitter}}
        <a class="socials__link" href={{twitter_url}} target="_blank" rel="noopener noreferrer" aria-label="{{@site.title}} {{t "twitter link"}}">{{>icons/twitter-icon}}</a>
    {{/if}}
</div>
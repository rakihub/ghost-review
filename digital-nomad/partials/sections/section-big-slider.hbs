<section class="section-big-slider{{class}}">
    <div class="wrapper">
        {{#match tag "=" 'show-latest-posts'}}
        <div class="slider-header">
            <h2 class="layout-title">{{t "Latest Posts"}}</h2>
        </div>
        {{else match tag "=" 'show-featured-posts' }}
        {{else}}
        <div class="slider-header">
            <h2 class="layout-title">
                <a class="layout-title__link" href="/tag/{{tag}}" arial-label="{{t "Link to page tag {tagName}" tagName=tag}}">
                    {{#get "tags" filter="slug:{{tag}}"}}
                        {{#foreach tags}}
                        {{name}}
                        {{/foreach}}
                    {{/get}}
                </a>
            </h2>
        </div>
        {{/match}}  
        <div class="swiper big-slider" data-index-slider="{{sectionIndex}}">
            <div class="swiper-wrapper">
            {{#match tag "=" 'show-latest-posts'}}
                {{#match count "<=" 5}}
                    {{#get "posts" limit = count include="tags,authors" order="published_at desc"}}
                        {{#foreach posts}}
                            {{>post-cards/post-card postType="Big slider" fullScreenSlide="true" showExcerpt="true" className=" swiper-slide post-card--big-slide" slide="true"}}
                        {{/foreach}}
                    {{/get}}
                {{else}}
                    {{#get "posts" limit = "5" include="tags,authors" order="published_at desc"}}
                        {{#foreach posts}}
                            {{>post-cards/post-card postType="Big slider" fullScreenSlide="true" showExcerpt="true" className=" swiper-slide post-card--big-slide" slide="true"}}
                        {{/foreach}}
                    {{/get}}
                {{/match}}
            {{else match tag "=" 'show-featured-posts' }}
                {{#match count "<=" 5}}
                    {{#get "posts" limit = count include="tags,authors" order="published_at desc" filter="featured:true"}}
                        {{#foreach posts}}
                            {{>post-cards/post-card postType="Big slider" fullScreenSlide="true" showExcerpt="true" className=" swiper-slide post-card--big-slide" slide="true"}}
                        {{/foreach}}
                    {{/get}}
                {{else}}
                    {{#get "posts" limit = "5" include="tags,authors" order="published_at desc" filter="featured:true"}}
                        {{#foreach posts}}
                            {{>post-cards/post-card postType="Big slider" fullScreenSlide="true" showExcerpt="true" className=" swiper-slide post-card--big-slide" slide="true"}}
                        {{/foreach}}
                    {{/get}}
                {{/match}}
            {{else}}
                {{#match count "<=" 5}}
                    {{#get "posts" limit = count include="tags,authors" order="published_at desc" filter="primary_tag:{{tag}}"}}
                        {{#foreach posts}}
                            {{>post-cards/post-card postType="Big slider" fullScreenSlide="true" showExcerpt="true" className=" swiper-slide post-card--big-slide" slide="true"}}
                        {{/foreach}}
                    {{/get}}
                {{else}}
                    {{#get "posts" limit = "5" include="tags,authors" order="published_at desc" filter="primary_tag:{{tag}}"}}
                        {{#foreach posts}}
                            {{>post-cards/post-card postType="Big slider" fullScreenSlide="true" showExcerpt="true" className=" swiper-slide post-card--big-slide" slide="true"}}
                        {{/foreach}}
                    {{/get}}
                {{/match}}
            {{/match}}
            </div>
            <div class="big-slider-navigation">
                <div class="big-slider-pagination"></div>
                <button class="big-slider-btn big-prev-btn-{{sectionIndex}}">
                    {{>icons/slider-prev-icon}}
                </button>
                <button class="big-slider-btn big-next-btn-{{sectionIndex}}">
                    {{>icons/slider-next-icon}}
                </button>
            </div>
        </div>
    </div>
</section>
 <section class="section-one-featured-plus-three{{class}}">
    <div class="wrapper">
        <div class="layout-flex">
            {{#match tag "=" 'show-latest-posts'}}
                {{#get "posts" limit = 1 include="tags,authors" order="published_at desc" filter="featured:true"}}
                    {{#foreach posts}}
                        {{>post-cards/post-card postType="Big post" showExcerpt="true" className=" post-card--big" firstFeaturedPost="true" lazyLoading=../../lazyLoading}}
                    {{/foreach}}
                {{/get}}
            <div class="layout-aside layout-aside--three-posts">
                <h2 class="layout-title">{{t "Latest Posts"}}</h2>
                {{#get "posts" limit = 3 include="tags,authors" order="published_at desc"}}
                    {{#foreach posts}}
                            {{>post-cards/post-card postType="Small post" className=" post-card--small" showPrimaryTag="true" lazyLoading=../../lazyLoading}}
                    {{/foreach}}
                {{/get}}
            </div>
            {{else match tag "=" 'show-featured-posts' }}
                {{#get "posts" limit = 4 include="tags,authors" order="published_at desc" filter="featured:true"}}
                    {{#foreach posts}}

                        {{#has index="1"}}
                            <div class="layout-aside layout-aside--three-posts">
                            <h2 class="layout-title">{{t "Featured Posts"}}</h2>
                        {{/has}}

                        {{#if @first}}
                            {{>post-cards/post-card postType="Big post" showExcerpt="true" className=" post-card--big" showPrimaryTag="true" lazyLoading=../../lazyLoading}}
                        {{else}}
                            {{>post-cards/post-card postType="Small post" className=" post-card--small" showPrimaryTag="true" lazyLoading=../../lazyLoading}}
                        {{/if}}

                        {{#has index="3"}}
                            </div>
                        {{/has}}
                    {{/foreach}}
                {{/get}}
            {{else}}
                {{#get "posts" limit = 1 include="tags,authors" order="published_at desc" filter="featured:true"}}
                    {{#foreach posts}}
                        {{>post-cards/post-card postType="Big post" showExcerpt="true" className=" post-card--big" showPrimaryTag="true" lazyLoading=../../lazyLoading}}
                    {{/foreach}}
                {{/get}}
                <div class="layout-aside layout-aside--three-posts">
                    <h2 class="layout-title">
                        <a class="layout-title__link" href="/tag/{{tag}}" arial-label="{{t "Link to page tag {tagName}" tagName=tag}}">
                            {{#get "tags" filter="slug:{{tag}}"}}
                                {{#foreach tags}}
                                {{name}}
                                {{/foreach}}
                            {{/get}}
                        </a>
                    </h2>
                    {{#get "posts" limit = 3 include="tags,authors" order="published_at desc" filter="primary_tag:{{tag}}"}}
                        {{#foreach posts}}
                            {{>post-cards/post-card postType="Small post" className=" post-card--small" showPrimaryTag="true" lazyLoading=../../lazyLoading}}
                        {{/foreach}}
                    {{/get}}
                </div>
            {{/match}}      
        </div>
    </div>
</section>
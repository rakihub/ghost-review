<section class="section-grid-two-column{{class}}">
    <div class="wrapper">
        {{#match tag "=" 'show-latest-posts'}}
            <h2 class="layout-title">{{t "Latest Posts"}}</h2>
            <div class="layout-grid latest-section-posts">
                {{#foreach posts}}
                    {{>post-cards/post-card postType="Grid 2 column" className=" post-card--small-list latest-post" lazyLoading=../lazyLoading}}
                {{/foreach}}
            </div>
            {{>button btnType="loadMore" classNames="load-more-btn--margin-top"}}
        {{else match tag "=" 'show-featured-posts' }}
            <h2 class="layout-title">{{t "Featured Posts"}}</h2>
            <div class="layout-grid">
                {{#get "posts" limit = count include="tags,authors" order="published_at desc" filter="featured:true"}}
                    {{#foreach posts}}
                        {{>post-cards/post-card postType="Grid 2 column" className=" post-card--small-list" lazyLoading=../../lazyLoading}}
                    {{/foreach}}
                {{/get}}
            </div>
        {{else}}
            <h2 class="layout-title">
                <a class="layout-title__link" href="/tag/{{tag}}" arial-label="{{t "Link to page tag {tagName}" tagName=tag}}">
                    {{#get "tags" filter="slug:{{tag}}"}}
                        {{#foreach tags}}
                        {{name}}
                        {{/foreach}}
                    {{/get}}
                </a>
            </h2>
            <div class="layout-grid">
                {{#get "posts" limit = count include="tags,authors" order="published_at desc" filter="primary_tag:{{tag}}"}}
                    {{#foreach posts}}
                        {{>post-cards/post-card postType="Grid 2 column" className=" post-card--small-list" lazyLoading=../../lazyLoading}}
                    {{/foreach}}
                {{/get}}
            </div>
        {{/match}}      
    </div>
</section>
<section class="section-small-slider{{class}}">
    <div class="wrapper">
        <div class="slider-header">
            {{#match tag "=" 'show-latest-posts'}}
                <h2 class="layout-title">{{t "Latest Posts"}}</h2>
            {{else match tag "=" 'show-featured-posts' }}
                <h2 class="layout-title">{{t "Featured Posts"}}</h2>
            {{else}}
                <h2 class="layout-title">
                    <a class="layout-title__link" href="/tag/{{tag}}" arial-label="{{t "Link to page tag {tagName}" tagName=tag}}">
                        {{#get "tags" filter="slug:{{tag}}"}}
                            {{#foreach tags}}
                            {{name}}
                            {{/foreach}}
                        {{/get}}
                    </a>
                </h2>
            {{/match}}  
            <div class="small-slider-navigation">
                <button class="small-slider-btn small-prev-btn-{{sectionIndex}}">
                    {{>icons/slider-prev-icon}}
                </button>
                <button class="small-slider-btn small-next-btn-{{sectionIndex}}">
                    {{>icons/slider-next-icon}}
                </button>
            </div>
        </div>
        <div class="swiper small-slider" data-index-slider="{{sectionIndex}}">
            <div class="swiper-wrapper">
            {{#match tag "=" 'show-latest-posts'}}
                {{#match count "<=" 7}}
                    {{#get "posts" limit = count include="tags,authors" order="published_at desc"}}
                        {{#foreach posts}}
                                {{>post-cards/post-card postType="Small slider" showExcerpt="true" className=" swiper-slide post-card--small-slide"}}
                        {{/foreach}}
                    {{/get}}
                {{else}}
                    {{#get "posts" limit = "7" include="tags,authors" order="published_at desc"}}
                        {{#foreach posts}}
                                {{>post-cards/post-card postType="Small slider" showExcerpt="true" className=" swiper-slide post-card--small-slide"}}
                        {{/foreach}}
                    {{/get}}
                {{/match}}
            {{else match tag "=" 'show-featured-posts' }}
                {{#match count "<=" 7}}
                    {{#get "posts" limit = count include="tags,authors" order="published_at desc" filter="featured:true"}}
                        {{#foreach posts}}
                                {{>post-cards/post-card postType="Small slider" showExcerpt="true" className=" swiper-slide post-card--small-slide"}}
                        {{/foreach}}
                    {{/get}}
                {{else}}
                    {{#get "posts" limit = "7" include="tags,authors" order="published_at desc" filter="featured:true"}}
                        {{#foreach posts}}
                                {{>post-cards/post-card postType="Small slider" showExcerpt="true" className=" swiper-slide post-card--small-slide"}}
                        {{/foreach}}
                    {{/get}}
                {{/match}}
            {{else}}
                {{#match count "<=" 7}}
                    {{#get "posts" limit = count include="tags,authors" order="published_at desc" filter="primary_tag:{{tag}}"}}
                        {{#foreach posts}}
                                {{>post-cards/post-card postType="Small slider" showExcerpt="true" className=" swiper-slide post-card--small-slide"}}
                        {{/foreach}}
                    {{/get}}
                {{else}}
                    {{#get "posts" limit = "7" include="tags,authors" order="published_at desc" filter="primary_tag:{{tag}}"}}
                        {{#foreach posts}}
                                {{>post-cards/post-card postType="Small slider" showExcerpt="true" className=" swiper-slide post-card--small-slide"}}
                        {{/foreach}}
                    {{/get}}
                {{/match}}
            {{/match}}
            </div>
        </div>
    </div>
</section>
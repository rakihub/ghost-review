{{!-- Small Sliders Init Script --}}
<script>
    const smallSliders = document.querySelectorAll('.swiper.small-slider')

    smallSliders.forEach(smallSlider => {
            new Swiper(smallSlider, {
            direction: 'horizontal',
            loop: true,
            slidesPerView: 3,
            spaceBetween: 24,
            speed: 800,
            allowTouchMove: true,
            watchOverflow: true,
            breakpoints: {
                1100: {
                    allowTouchMove: false,
                },
                1000: {
                    slidesPerView: 3
                },
                650: {
                    slidesPerView: 2,
                },
                0: {
                    slidesPerView: 1
                }
            },
            navigation: {
            nextEl: `.small-next-btn-${smallSlider.dataset.indexSlider}`,
            prevEl: `.small-prev-btn-${smallSlider.dataset.indexSlider}`
            }
        })
    })
</script>
<article class="sidebar-post">
    <div class="sidebar-post__date-wrapper">
        <time datetime="{{date format='YYYY-MM-DD'}}" class="sidebar-post__day">{{date format="D"}}</time>
          <time datetime="{{date format='YYYY-MM-DD'}}" class="sidebar-post__month-year">{{date format="MMM, YYYY"}}</time>
    </div>


    <div class="sidebar-post__content">
        {{#if tags}}
            {{>post-tags showOnlyPrimaryTag="true"}}
        {{/if}}
        <a class="sidebar-post__title" aria-label="{{t "Post title link"}}" href="{{url}}">{{title}}</a>
    </div>
</article>
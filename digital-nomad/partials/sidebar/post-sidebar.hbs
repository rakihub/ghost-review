<aside class="post-sidebar-wrapper">
    <div class="post-sidebar">
        {{>sidebar/sidebar-banner}}
        <div class="post-sidebar-posts">
            <div class="post-sidebar-posts__title">{{t "Featured Posts"}}</div>
            {{#get "posts" limit = 3 include="tags" order="published_at desc" filter="featured:true"}}
                {{#foreach posts}}
                    <article class="post-sidebar-post">
                    {{#if feature_image}}
                        <a class="post-sidebar-post__img-link" href="{{url}}" aria-label="{{t "Post image link"}}">
                            <picture>
                                <source 
                                srcset="{{img_url feature_image size="300" format="webp" }} 300w, 
                                {{img_url feature_image size="150" format="webp" }} 150w, 
                                {{img_url feature_image size="100" format="webp" }} 100w"
                                    sizes="(max-width: 900px) 10vw, (max-width: 1100px) 13vw, 8vw" type="image/webp">
                                <img srcset="{{img_url feature_image size="300" }} 300w, 
                                {{img_url feature_image size="150" }} 150w,
                                {{img_url feature_image size="100" }} 100w" 
                                sizes="(max-width: 900px) 10vw, (max-width: 1100px) 13vw, 8vw"
                                    src="{{img_url feature_image size="300"}}"
                                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}} {{t "feature image"}}{{/if}}"
                                    class="post-sidebar-post__img" {{#match lazyLoading "=" "true" }}loading="lazy" {{/match}}>
                            </picture>
                        </a>
                    {{else}}
                        <a class="post-card-no-image{{#if @custom.dark_mode_logo}} post-card-no-image--dark-logo{{/if}}">
                            {{#if @site.logo}}
                                {{#if @custom.dark_mode_logo}}
                                <img src="{{img_url @custom.dark_mode_logo}}" alt="{{@site.title}} {{t "logo"}}" class="post-card-no-image__dark-logo"/>
                                {{/if}}
                                <img src="{{img_url @site.logo}}" alt="{{@site.title}} {{t "logo"}}" class="post-card-no-image__logo"/>
                                {{else}}
                                <h3 class="post-card-no-image__title">{{@site.title}}</h3>
                            {{/if}}
                        </a>
                    {{/if}}
                        <div class="post-sidebar-post-content">
                            {{#if tags}}
                                {{>post-tags showOnlyPrimaryTag="true"}}
                            {{/if}}
                            <a class="post-sidebar-post-content__title" aria-label="{{t "Post title link"}}" href="{{url}}">{{title}}</a>
                        </div>
                    </article>
                {{/foreach}}
            {{/get}}
        </div>
    </div>
</aside>
